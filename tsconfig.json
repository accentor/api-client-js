{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "lib": ["es2020", "es6", "dom"],
    "target": "es2018",
    "emitDeclarationOnly": true,
    "declaration": true,    
    "baseUrl": "./src",
    "outFile": "./dist/index.js",
    "paths": {
      "*": ["node_modules/*"]
    },
    "module": "es6",
    "moduleResolution": "node",
  },
  "exclude": [
    "dist/*",
  ]
}